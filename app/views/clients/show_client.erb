<div class="listr1">
    <form action="/therapists/<%=@therapist.id%>" method="GET">
        <input type="submit" value="Return To Home Page">
    </form>

    <% if @client.record.risk_level > 7 %>
        <% @client.alert = " High level of Risk" %>
        <% elsif @client.record.risk_level >= 4 %>
            <% @client.alert = " Moderate level of Risk" %>

                <% end %>
